<h1>All Items</h1>

<p><%= link_to "Add New Item", new_item_path %></p>

<table border="1" cellpadding="5" cellspacing="0">
  <thead>
    <tr>
      <th>Name</th>
      <th>Expiration Date</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.expires_at.present? ? item.expires_at.strftime("%Y-%m-%d") : "-" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "Home", root_path %></p>
