<% content_for :title, "Edit Grocery Item - NomNom" %>

<div class="card" style="max-width: 600px; margin: 2rem auto;">
  <h1 style="text-align: center; margin-bottom: 0.5rem;">âœï¸ Edit Item</h1>
  <p class="text-center text-muted" style="margin-bottom: 2rem;">Update your grocery item details</p>

  <%= form_with model: @grocery_item, local: true do |f| %>
    <% if @grocery_item.errors.any? %>
      <div class="alert alert-error">
        <h3 style="margin-top: 0; font-size: 1.1rem;">
          <%= pluralize(@grocery_item.errors.count, "error") %> prevented this item from being saved:
        </h3>
        <ul style="margin-left: 1.5rem;">
          <% @grocery_item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, "ğŸ·ï¸ Item Name*" %>
      <%= f.text_field :name, required: true, autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label :quantity, "ğŸ“¦ Quantity*" %>
      <%= f.text_field :quantity, required: true %>
    </div>

    <div class="form-group">
      <%= f.label :notes, "ğŸ“ Notes (optional)" %>
      <%= f.text_area :notes, rows: 3 %>
    </div>

    <div class="form-group">
      <label style="display: flex; align-items: center; gap: 0.5rem; cursor: pointer;">
        <%= f.check_box :purchased, style: "width: auto; height: 1.2rem;" %>
        <span>âœ… Mark as purchased</span>
      </label>
    </div>

    <div style="display: flex; gap: 1rem; margin-top: 2rem;">
      <%= f.submit "Update Item", class: "btn btn-primary", style: "flex: 1;" %>
      <%= link_to "Cancel", grocery_items_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
